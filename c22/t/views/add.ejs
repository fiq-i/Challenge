
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>postgre-bread</title>
</head>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
  crossorigin="anonymous">

<body>
  <div class="container">
    <form action="/api/index" method="POST">
      <h1>Add Data</h1>
      <div class="form-group row">
        <label for="example-text-input" class="col-2 col-form-label">String</label>
        <div class="col-sm-10">
          <input class="form-control" type="text" placeholder="String" id="example-text-input" name="string">
        </div>
      </div>
      <div class="form-group row">
        <label for="example-search-input" class="col-2 col-form-label">Integer</label>
        <div class="col-10">
          <input class="form-control" type="integer" placeholder="Integer" id="example-search-input" name="integer">
        </div>
      </div>
      <div class="form-group row">
        <label for="example-email-input" class="col-2 col-form-label">Float</label>
        <div class="col-10">
          <input class="form-control" type="float" placeholder="Float" id="example-email-input" name="float">
        </div>
      </div>
      <div class="form-group row">
        <label for="example-date-input" class="col-2 col-form-label">Date</label>
        <div class="col-10">
          <input class="form-control" type="date"  id="example-date-input" name="date">
        </div>
      </div>
      <div class="form-group row">
        <label for="example-number-input" class="col-2 col-form-label">Boolean</label>
        <div class="col-10">
          <select class="custom-select" name="boolean">
            <option value="" selected>Choose the boolean ...</option>
            <option value="true">True</option>
            <option value="false">False</option>
          </select>
        </div>
      </div>
      <button type="submit" class="btn btn-primary">SAVE</button>
      <a href="/" class="btn btn-warning">BACK</a>
    </form>

    <script type="text/javascript">
      const API_URL = 'http://localhost:3000/api/index';
  
      $(document).ready(function () {
        $('form').submit(function(e){
         e.preventDefault();
          addData();
          $('form').trigger('reset');
        })
      })

      const addData = () => {
        $.ajax({
          method: "POST",
          url: API_URL,
          dataType: "json",
          data: { string: $('#string').val(), integer: $('#integer').val(), float: $('#float').val(), date: $('#date').val(), boolean: $('#boolean').val()}
          //data: { string, integer, float, date, boolean }
        })
          .done(function (data) {
            getData()
  
          })
          .fail(function (jqXHR, textStatus) {
            alert("Request failed add data: " + textStatus);
          })
      }
  

  
  
    </script>

  </div>

</html>