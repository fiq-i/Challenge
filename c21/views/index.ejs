<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <title>Postgres Bread</title>
</head>

<body>
    <div class="container" style="padding-top: 20px">
        <h1>BREAD (Browse, Read, Edit, Add, Delete)</h1>
        <h2>Filters</h2>
        <form action="/" method="GET">
            <input type="hidden" name="page" value="1" />
            
            <div class="row">
                <div class="col-sm-2">
                    <div class="form-check-label">ID</div>
                </div>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="ID" name="nmid" placeholder="ID" />
                </div>
            </div>
            <br>
            
    <div class="row">
        <div class="col-sm-2">
            <div class="form-check-label">Name</div>
        </div>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="name" name="nmstring" placeholder="Name" />
        </div>
    </div>
    <br>
    
        <div class="row">
            <div class="col-sm-2">
           <div class="form-check-label">Weight</div>
        </div>
            <div class="col-sm-10">
                <div class="form-group">
                    <input type="text" class="form-control" id="weight" name="nminteger" placeholder="Weight" />
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-sm-2">
                <div class="form-check-label">Height</div>
        </div>
            <div class="col-sm-10">
                <div class="form-group">
                    <input type="text" class="form-control" id="height" name="nmfloat" placeholder="Height" />
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-sm-2">
                <div class="form-check-label">Birthdate</div>
        </div>
            <div class="col-sm-3">
                <div class="form-group">
                    <input type="date" class="form-control" id="startdate" name="nmdateStart" placeholder="START DATE" />
                    TO
                    <input type="date" class="form-control" id="enddate" name="nmdateEnd" placeholder="END DATE" />
                </div>
            </div>
        </div> 

        <div class="row">
            <div class="col-sm-2">
                <div class="form-check-label">Marital Status</div>
            </div>
            <div class="col-sm-5">
                <div class="form-group">
                    <select class="form-control" name="nmboolean">
                        <option value="">--pilih type--</option>
                        <option value="true">True</option>
                        <option value="false">False</option>
                    </select>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary" style="border-radius: 20px;">Search</button>
        <table class="table table-striped" border="1">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Weight</th>
                <th scope="col">Height</th>
                <th scope="col">Birthdate</th>
                <th scope="col">Status</th>
                <th scope="col">Actions</th>
            </tr>

            <% data.forEach((data)=>{ %>
                <tr>
                    <td>
                        <%= data.ID %>
                    </td>
                    <td>
                        <%= data.name %>
                    </td>
                    <td>
                        <%= data.weight %>
                    </td>
                    <td>
                        <%= data.height %>
                    </td>
                    <td>
                        <%= data.birthdate %>
                    </td>
                    <td>
                        <%= data.status %>
                    </td>
                    <td><a class="btn btn-success" style="border-radius: 15px;" href="edit/<%= data.ID %>">Edit</a>
                        <a class="btn btn-danger" style="border-radius: 10px;" href="erase/<%= data.ID %>">Delete</a>
                    </td>
                </tr>
                <% }) %>

        </table>
        <a class="btn btn-primary" style="border-radius: 20px;" href="/add">ADD</a>


        <nav aria-label="Page navigation example" style="margin-top:1%">
            <ul class="pagination" class="pagination justify-content-center">
                <li class="page-item <%= current == 1 ? 'disabled' : ''%>"><a class="page-link"
                        href="<%= query.replace(`page=${parseInt(current)}`, `page=${parseInt(current) - 1}`) %>">Previous</a>
                </li>
                <% for(let i=1; i <=pages; i++){ %>
                    <li class="page-item <%= current == i ? 'active' : '' %>"><a class="page-link"
                            href="<%= query.replace(`page=${current}`, `page=${i}`) %>">
                            <%= i %>
                        </a></li>
                    <% } %>
                        <li class="page-item <%= current == pages ? 'disabled' : ''%>"><a class="page-link"
                                href="<%= query.replace(`page=${parseInt(current)}`, `page=${parseInt(current) + 1}`) %>">Next</a>
                        </li>
            </ul>
        </nav>

        </div>

        </div>

        </form>

</body>

</html>