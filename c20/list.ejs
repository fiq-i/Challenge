<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Belajar</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" 
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" 
    crossorigin="anonymous">
</head>
<body>
  <div class="container" style="padding-top: 20px">
    <h1>BREAD (Browse, Read, Edit, Add, Delete)</h1>
    <h2>Filters</h2>
    <form action="/" method="GET">       
      <input type="hidden" name="page" value="1" /> 
      <!---------Menampilkan box id------->
    <div class="row">
        <div class="col-sm-2">
            <div class="form-check">
                <input class="form-check-input" 
                type="checkbox" 
                name="ck1"
                <%= Query.id == 'on' ? 'checked': '' %> />
                <label class="form-check-label">ID</label>
            </div>
        </div>
    </div>
    <div class="col-sm-10">
        <div class="form-group">
            <input type="text" class="form-control" id="id" name="nmid"
            placeholder="ID"/>
        </div>
    </div>
    <!---------Menampilkan box String------->
    <div class="container">
      <div class="row">
          <div class="col-sm-2">
              <div class="form-check">
                  <input class="form-check-input" 
                  type="checkbox" 
                  name="ck2"
                  />String
                  
              </div>
          </div>
      </div>
      <div class="col-sm-10">
          <div class="form-group">
              <input 
              type="text" 
              class="form-control" 
              id="String" 
              name="nmstring"
              placeholder="String"
               />
              </div>
        </div>
    </div>
    <!---------Menampilkan box Integer------->
    <div class="row">
        <div class="col-sm-2">
            <div class="form-check">
                <input class="form-check-input" 
                type="checkbox" 
                name="ck3"/>Integer
            </div>
        </div>
    </div>
    <div class="col-sm-10">
        <div class="form-group">
            <input type="text" class="form-control" id="Integer" name="nminteger"
            placeholder="Integer" />
        </div>
    </div>
    <!---------Menampilkan box Float------->
    <div class="row">
        <div class="col-sm-2">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="ck4"/>Float
            </div>
        </div>
    </div>
    <div class="col-sm-10">
        <div class="form-group">
            <input type="text" class="form-control" id="Float" name="nmfloat"
            placeholder="Float" />
        </div>
    </div>
    <!---------Menampilkan box Date------->
    <div class="row">
        <div class="col-sm-2">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="ck5"/>Date
            </div>
        </div>
    </div>
    <div class="col-sm-10">
        <div class="form-group">
            <input type="date" class="form-control" id="Date" name="nmdateStart"
            placeholder="START DATE" />
            TO
            <input type="date" class="form-control" id="Date" name="nmdateEnd"
            placeholder="END DATE" />
        </div>
    </div>

    <!---------Menampilkan box Bolean------->
    <div class="row">
        <div class="col-sm-2">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="ck6"/>Boolean
            </div>
        </div>
    </div>
    <div class="form-group row">    
            <!-- <label for="colFormLabelSm" class="col-sm-1 col-form-label">Boolean</label> -->
            <div class="col-sm-10">                    
                <select class="form-control" id_type="exampleFormControlSelect1" name="nmboolean">
                <option value="">--pilih type--</option>
                <option value="true">true</option>
                <option value="false">false</option>
                </select>
            </div>    
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
        <table class="table table-striped table-dark" border="1">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Umur</th>
                <th scope="col">Integer</th>
                <th scope="col">Float</th>
                <th scope="col">Date</th>
                <th scope="col">Boolean</th>
                <th scope="col">Actions</th>
            </tr>
            <% data.forEach((data)=>{ %>
              <tr>
                  <td><%= data.id %></td>
                  <td><%= data.dataString %></td>
                  <td><%= data.dataInteger %></td>
                  <td><%= data.dataFloat %></td>
                  <td><%= data.dataDate %></td>
                  <td><%= data.dataBoolean %></td>
                  <td><a class="btn btn-success" href="edit/<%= data.id %>">Edit</a>
                      <a class="btn btn-danger" href="deleted/<%= data.id %>">Delete</a>
                  </td>
              </tr>
            <% }) %>
            
        </table>
        <a class="btn btn-primary" href="/add">ADD</a>
        
        <nav aria-label="Page navigation example" style="margin-top:1%">
            <ul class="pagination" class="pagination justify-content-center">
                <li class="page-item <%= current == 1 ? 'disabled' : ''%>"><a class="page-link"
                        href="<%= query.replace(`page=${parseInt(current)}`, `page=${parseInt(current) - 1}`) %>">Previous</a>
                </li>
                <% for(let i = 1; i <= pages; i++){ %>
                <li class="page-item <%= current == i ? 'active' : '' %>"><a class="page-link"
                        href="<%= query.replace(`page=${current}`, `page=${i}`) %>"><%= i %></a></li>
                <% } %>
                <li class="page-item <%= current == pages ? 'disabled' : ''%>"><a class="page-link"
                        href="<%= query.replace(`page=${parseInt(current)}`, `page=${parseInt(current) + 1}`) %>">Next</a>
                </li>
            </ul>
        </nav>
    </div>
    
</div>

</form>

</body>
</html> 